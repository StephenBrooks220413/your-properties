<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header') -%>
  <body>

  <!-- Navbar -->
  <%- include('layouts/navBar') -%>
  <!-- Navbar -->

  <div style="
    background: url('https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1153&q=80') 
    no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    padding-top: 60px;
    padding-bottom: 60px;
  ">
    <div class="container p-4">
        <h1 class="display-4 mb-3 text-primary">
          <%= user.username %>
        </h1>
        
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/profiles">Community Profiles</a></li>
              <li class="breadcrumb-item active text-white" aria-current="page">
                <%= user.username %>
              </li>
            </ol>
        </nav>

        <div class="row">
          <div class="col-md">
              <div style="opacity: 0.9;" class="card hover-shadow m-3 p-3">
                  <p class="lead">
                      <strong>About Me:</strong> <br>
                      <%= user.about %>
                  </p>
                  <p>
                      <a href="mailto:<%= user.email %>">Email Me</a>
                  </p>
                  <p>
                      Member Since <%= user.joinedDate %>
                  </p>
              </div>
          </div>
        </div>
    </div>
  </div>

  <%- include('layouts/scripts') -%>
  <%- include('layouts/footer') -%>
</body>
</html>
